<%- include("partials/header")  -%>

<h1>Compose</h1>

<form class="" action="/compose" method="post" >
   <!-- title -->
    <div class="form-group">
        <label for="postTitle">Title</label>
        <input type="text" class="form-control" name="postTitle" aria-describedby="emailHelp" placeholder="">
         <small id="emailHelp" class="form-text text-muted"></small>
  </div>
      <!-- post -->
      <div class="form-group">
        <label for="postBody">Post</label>
        <textarea class="form-control" name="postBody"  cols="30" rows="10"></textarea>
        <small id="emailHelp" class="form-text text-muted"></small>
      </div>
    

    <button class="btn btn-primary"type="submit" name="button">Publish</button>
</form>

